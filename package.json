{
  "name": "spotify-adapter",
  "display_name": "Spotify",
  "version": "0.1.4",
  "description": "Control your spotify player",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/spotify-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/spotify-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/spotify-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "manifest.json",
    "index.js",
    "spotify-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "redirectURI": "https://ppacher.github.io/spotify-auth-callback"
    },
    "schema": {
      "type": "object",
      "title": "Spotify Authorization",
      "description": "In order to use spotify-adapter you first need to create a new Spotify Client ID at https://developer.spotify.com/dashboard/applications by clicking \"Create a Client ID\". Fill in the requested information (tick \"I don't know what I'm building\"). Next, copy the Client ID and Client Secret into the respective fields below and save.",
      "required": [
        "interval"
      ],
      "properties": {
        "accessToken": {
          "type": "string",
          "title": "The spotify access token"
        },
        "clientID": {
          "type": "string",
          "title": "The ClientID generated by Spotify"
        },
        "clientSecret": {
          "type": "string",
          "title": "The Client secret generated by Spotify"
        },
        "url": {
          "type": "string",
          "title": "Open URL to authenticate"
        },
	"redirectURI": {
	  "type": "string",
	  "title": "Redirect URL",
	  "description": "This URL must match the one configured in your Spotify Application"
	},
	"authorized": {
	  "type": "boolean",
	  "title": "Authorization status",
	  "description": "Will be enabled once Spotify authorization completes",
	  "readOnly": true
	},
        "deviceID": {
          "type": "string",
          "title": "An optional Spotify Device ID"
        },
        "interval": {
          "type": "number",
          "title": "Number of seconds for polling the current playback state"
        }
      }
    }
  },
  "dependencies": {
    "request": "^2.88.0",
    "spotify-web-api-node": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.2.2"
  }
}
